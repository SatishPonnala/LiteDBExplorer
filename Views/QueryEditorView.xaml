<UserControl
    x:Class="LiteDBExplorer.Views.QueryEditorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Query Editor Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource BackgroundToolbarBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Query Editor" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Execute LiteDB queries and view results" 
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="ClearQueryButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Clear Query">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74D;" FontSize="14"/>
                    </Button>
                    <Button x:Name="SaveQueryButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Save Query">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E5;" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Query Controls -->
        <Grid Grid.Row="1" Margin="16,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Collection Selector -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Collection:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <ComboBox x:Name="CollectionComboBox"
                          PlaceholderText="Select Collection"
                          Width="200"
                          Style="{StaticResource DefaultComboBoxStyle}"/>
            </StackPanel>

            <!-- Query Type Selector -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                <TextBlock Text="Type:" 
                           FontWeight="SemiBold" 
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                <ComboBox x:Name="QueryTypeComboBox"
                          Width="120"
                          Style="{StaticResource DefaultComboBoxStyle}">
                    <ComboBoxItem Content="LINQ Query" IsSelected="True"/>
                    <ComboBoxItem Content="JSON Query"/>
                    <ComboBoxItem Content="Aggregation"/>
                </ComboBox>
            </StackPanel>
        </Grid>

        <!-- Query Editor and Results -->
        <Grid Grid.Row="2" Margin="16,0,16,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Query Input Area -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource BackgroundCardBrush}"
                    BorderBrush="{ThemeResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="0,0,8,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Query Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource BackgroundToolbarBrush}"
                            BorderBrush="{ThemeResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <TextBlock Text="Query" 
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    </Border>

                    <!-- Query Text Editor -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  Padding="12">
                        <TextBox x:Name="QueryTextBox"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 FontFamily="Consolas"
                                 FontSize="12"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                 PlaceholderText="Enter your LiteDB query here...&#x0a;&#x0a;LINQ Example:&#x0a;db.Find(Query.EQ(&quot;name&quot;, &quot;John&quot;))&#x0a;&#x0a;JSON Example:&#x0a;{&quot;name&quot;: &quot;John&quot;}&#x0a;&#x0a;Aggregation Example:&#x0a;db.Aggregate([&#x0a;  {&quot;$match&quot;: {&quot;age&quot;: {&quot;$gt&quot;: 18}}},&#x0a;  {&quot;$group&quot;: {&quot;_id&quot;: &quot;$category&quot;, &quot;count&quot;: {&quot;$sum&quot;: 1}}}&#x0a;])"/>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- Splitter -->
            <Border Grid.Column="1" 
                    Width="4" 
                    Background="{ThemeResource BorderBrush}"
                    HorizontalAlignment="Center"/>

            <!-- Results Area -->
            <Border Grid.Column="2" 
                    Background="{ThemeResource BackgroundCardBrush}"
                    BorderBrush="{ThemeResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Margin="8,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Results Header -->
                    <Border Grid.Row="0" 
                            Background="{ThemeResource BackgroundToolbarBrush}"
                            BorderBrush="{ThemeResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Results" 
                                       FontWeight="SemiBold"
                                       FontSize="14"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                                <TextBlock x:Name="ResultsCountText"
                                           Text="0 documents"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="ExecutionTimeText"
                                           Text=""
                                           FontSize="11"
                                           Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Results List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ListView x:Name="ResultsListView"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource BackgroundBrush}"
                                            BorderBrush="{ThemeResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="8,4"
                                            Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <FontIcon Grid.Column="0" 
                                                      FontFamily="Segoe Fluent Icons" 
                                                      Glyph="&#xE8A5;" 
                                                      Margin="0,0,12,0"
                                                      Foreground="{ThemeResource PrimaryBrush}"
                                                      FontSize="14"/>
                                            
                                            <ScrollViewer Grid.Column="1" 
                                                          MaxHeight="80"
                                                          VerticalScrollBarVisibility="Auto"
                                                          HorizontalScrollBarVisibility="Auto">
                                                <TextBlock Text="{Binding JsonString}" 
                                                           FontFamily="Consolas"
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                           TextWrapping="Wrap"/>
                                            </ScrollViewer>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="4">
                                                <Button Style="{StaticResource IconButtonStyle}" 
                                                        Padding="4"
                                                        ToolTipService.ToolTip="Copy JSON">
                                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8C8;" FontSize="12"/>
                                                </Button>
                                                <Button Style="{StaticResource IconButtonStyle}" 
                                                        Padding="4"
                                                        ToolTipService.ToolTip="View Details">
                                                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A5;" FontSize="12"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Action Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource BackgroundToolbarBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status and Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock x:Name="QueryStatusText"
                               Text="Ready to execute query"
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="QueryInfoText"
                               Text=""
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="ExecuteQueryButton"
                            Click="ExecuteQueryButton_Click"
                            Style="{StaticResource AccentButtonStyle}"
                            Padding="16,8">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,8,0"/>
                            <TextBlock Text="Execute Query"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="ExportResultsButton"
                            Style="{StaticResource DefaultButtonStyle}"
                            Padding="12,8"
                            IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E5;" Margin="0,0,8,0"/>
                            <TextBlock Text="Export"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>