<UserControl
    x:Class="LiteDBExplorer.Views.CollectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiteDBExplorer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Collection Header -->
        <Grid Grid.Row="0" Margin="16,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock x:Name="CollectionNameText" 
                           Text="Collection Name" 
                           FontSize="20" 
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="DocumentCountText" 
                           Text="0 documents" 
                           FontSize="14" 
                           Opacity="0.7"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button x:Name="ExportButton"
                        Click="ExportButton_Click"
                        ToolTipService.ToolTip="Export Collection">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74E;"/>
                </Button>
                <Button x:Name="ImportButton"
                        Click="ImportButton_Click"
                        ToolTipService.ToolTip="Import Collection"
                        Margin="8,0,0,0">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B5;"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Documents List -->
        <ListView Grid.Row="1" 
                  x:Name="DocumentsListView"
                  SelectionMode="Single"
                  SelectionChanged="DocumentsListView_SelectionChanged"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ScrollViewer.VerticalScrollMode="Enabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="8,4" MinHeight="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- ID Column -->
                        <TextBlock Grid.Column="0" 
                                   Text="{Binding Id}" 
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   TextTrimming="CharacterEllipsis"/>
                        
                        <!-- Document Content Column -->
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding JsonString}" 
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   TextWrapping="Wrap"
                                   MaxLines="3"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>
                        
                        <!-- Actions Column -->
                        <StackPanel Grid.Column="2" 
                                    Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Button Click="EditDocument_Click"
                                    ToolTipService.ToolTip="Edit Document"
                                    Style="{StaticResource IconButtonStyle}">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE70F;"/>
                            </Button>
                            <Button Click="DeleteDocument_Click"
                                    ToolTipService.ToolTip="Delete Document"
                                    Style="{StaticResource IconButtonStyle}"
                                    Margin="4,0,0,0">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74D;"/>
                            </Button>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>