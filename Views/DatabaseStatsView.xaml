<UserControl
    x:Class="LiteDBExplorer.Views.DatabaseStatsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <StackPanel Margin="16">
            <TextBlock Text="Database Statistics" 
                       FontSize="24" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,16"/>

            <!-- File Information -->
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,16">
                
                <StackPanel>
                    <TextBlock Text="File Information" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="File Path:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="FilePathText" Text="Not specified"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="File Size:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="FileSizeText" Text="0 B"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Last Modified:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="LastModifiedText" Text="Unknown"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="StatusText" Text="Closed"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Database Statistics -->
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16"
                    Margin="0,0,0,16">
                
                <StackPanel>
                    <TextBlock Text="Database Statistics" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Collections:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="CollectionsCountText" Text="0"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Documents:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalDocumentsText" Text="0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Total Size:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TotalSizeText" Text="0 B"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Indexes:" FontWeight="SemiBold"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="IndexesText" Text="0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Collection Details -->
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="16">
                
                <StackPanel>
                    <TextBlock Text="Collection Details" 
                               FontSize="18" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,12"/>
                    
                    <ListView x:Name="CollectionsListView" 
                              Height="200"
                              SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Name}" 
                                               FontWeight="SemiBold"/>
                                    
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding FormattedDocumentCount}" 
                                               Margin="16,0,0,0"/>
                                    
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding FormattedSize}" 
                                               Margin="16,0,0,0"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl> 