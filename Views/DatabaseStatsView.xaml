<UserControl
    x:Class="LiteDBExplorer.Views.DatabaseStatsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="{ThemeResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource BackgroundToolbarBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Database Statistics" 
                               FontSize="18" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Monitor database performance and usage" 
                               FontSize="12"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="RefreshStatsButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Refresh Statistics">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE72C;" FontSize="14"/>
                    </Button>
                    <Button x:Name="ExportStatsButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Export Statistics">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8E5;" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Statistics Content -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Auto">
            <StackPanel Margin="16" Spacing="16">

                <!-- Database Overview -->
                <Border Background="{ThemeResource BackgroundCardBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Database Overview" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Margin="0,0,0,12"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- File Size -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="File Size" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="FileSizeText"
                                           Text="0 KB"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Collections -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="Collections" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="CollectionsCountText"
                                           Text="0"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Documents -->
                            <StackPanel Grid.Column="2" Margin="0,0,16,0">
                                <TextBlock Text="Documents" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="DocumentsCountText"
                                           Text="0"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Last Modified -->
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Last Modified" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                <TextBlock x:Name="LastModifiedText"
                                           Text="Never"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Collection Statistics -->
                <Border Background="{ThemeResource BackgroundCardBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Collection Statistics" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Margin="0,0,0,12"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <ListView Grid.Row="1" 
                                  x:Name="CollectionStatsListView"
                                  Background="Transparent"
                                  BorderThickness="0">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{ThemeResource BackgroundBrush}"
                                            BorderBrush="{ThemeResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="0,4"
                                            Padding="12,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontWeight="SemiBold"
                                                           FontSize="14"
                                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                                <TextBlock Text="{Binding FormattedDocumentCount}" 
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                                <TextBlock Text="Documents" 
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding DocumentCount}" 
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Margin="16,0,0,0">
                                                <TextBlock Text="Avg Size" 
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding AverageDocumentSize}" 
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            </StackPanel>

                                            <StackPanel Grid.Column="3" Margin="16,0,0,0">
                                                <TextBlock Text="Indexes" 
                                                           FontSize="11"
                                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                                <TextBlock Text="{Binding IndexCount}" 
                                                           FontSize="14"
                                                           FontWeight="SemiBold"
                                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </Border>

                <!-- Performance Metrics -->
                <Border Background="{ThemeResource BackgroundCardBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="Performance Metrics" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Margin="0,0,0,12"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Query Performance -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Query Performance" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="QueryPerformanceText"
                                           Text="No data available"
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Storage Usage -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="Storage Usage" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="StorageUsageText"
                                           Text="No data available"
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Memory Usage -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Memory Usage" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,8"/>
                                <TextBlock x:Name="MemoryUsageText"
                                           Text="No data available"
                                           FontSize="14"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>

                <!-- System Information -->
                <Border Background="{ThemeResource BackgroundCardBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="System Information" 
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Margin="0,0,0,12"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Database Path -->
                            <StackPanel Grid.Column="0" Margin="0,0,16,0">
                                <TextBlock Text="Database Path" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="DatabasePathText"
                                           Text="No database loaded"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>

                            <!-- LiteDB Version -->
                            <StackPanel Grid.Column="1" Margin="0,0,16,0">
                                <TextBlock Text="LiteDB Version" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="LiteDbVersionText"
                                           Text="Unknown"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>

                            <!-- Application Version -->
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="App Version" 
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock x:Name="AppVersionText"
                                           Text="1.0.0"
                                           FontSize="12"
                                           Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 