<ContentDialog
    x:Class="LiteDBExplorer.Views.DocumentEditorDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Document Editor"
    PrimaryButtonText="Save"
    SecondaryButtonText="Cancel"
    DefaultButton="Primary"
    Background="{ThemeResource BackgroundBrush}"
    RequestedTheme="Dark">

    <Grid MinWidth="600" MinHeight="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{ThemeResource BackgroundToolbarBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Document Editor" 
                               FontSize="16" 
                               FontWeight="SemiBold"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                    <TextBlock Text="Edit JSON document with syntax highlighting" 
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="FormatJsonButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Format JSON">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8A5;" FontSize="14"/>
                    </Button>
                    <Button x:Name="ValidateJsonButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Validate JSON">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE930;" FontSize="14"/>
                    </Button>
                    <Button x:Name="ClearButton"
                            Style="{StaticResource IconButtonStyle}"
                            ToolTipService.ToolTip="Clear Content">
                        <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE74D;" FontSize="14"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Document Info -->
        <Border Grid.Row="1" 
                Background="{ThemeResource BackgroundCardBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Margin="16,8"
                Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8">
                    <FontIcon FontFamily="Segoe Fluent Icons" 
                              Glyph="&#xE8A5;" 
                              FontSize="14"
                              Foreground="{ThemeResource PrimaryBrush}"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="Document ID:" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                </StackPanel>

                <TextBlock Grid.Column="1" 
                           x:Name="DocumentIdText"
                           Text="New Document"
                           FontSize="12"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           VerticalAlignment="Center"
                           Margin="8,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Size:" 
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="DocumentSizeText"
                               Text="0 bytes"
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- JSON Editor -->
        <Border Grid.Row="2" 
                Background="{ThemeResource BackgroundCardBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Margin="16,8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Editor Header -->
                <Border Grid.Row="0" 
                        Background="{ThemeResource BackgroundToolbarBrush}"
                        BorderBrush="{ThemeResource BorderBrush}"
                        BorderThickness="0,0,0,1"
                        Padding="12,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="JSON Content" 
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorPrimaryBrush}"/>
                        
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <TextBlock x:Name="LineCountText"
                                       Text="Line 1, Col 1"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="CharCountText"
                                       Text="0 chars"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Editor Content -->
                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              Padding="12">
                    <TextBox x:Name="JsonTextBox"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="12"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                             TextChanged="JsonTextBox_TextChanged"
                             SelectionChanged="JsonTextBox_SelectionChanged"
                             PlaceholderText="Enter JSON content here...&#x0a;&#x0a;Example:&#x0a;{&#x0a;  &quot;name&quot;: &quot;John Doe&quot;,&#x0a;  &quot;age&quot;: 30,&#x0a;  &quot;email&quot;: &quot;john@example.com&quot;,&#x0a;  &quot;active&quot;: true,&#x0a;  &quot;created&quot;: &quot;2024-01-01T00:00:00Z&quot;&#x0a;}"/>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{ThemeResource BackgroundToolbarBrush}"
                BorderBrush="{ThemeResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Messages -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="16">
                    <TextBlock x:Name="ValidationStatusText"
                               Text="Ready"
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="SyntaxStatusText"
                               Text=""
                               FontSize="11"
                               Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="InsertTemplateButton"
                            Style="{StaticResource DefaultButtonStyle}"
                            Padding="8,4"
                            FontSize="11">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;" Margin="0,0,4,0"/>
                            <TextBlock Text="Template"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="InsertTimestampButton"
                            Style="{StaticResource DefaultButtonStyle}"
                            Padding="8,4"
                            FontSize="11">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE787;" Margin="0,0,4,0"/>
                            <TextBlock Text="Timestamp"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</ContentDialog>