<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="LiteDBExplorer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiteDBExplorer"
    xmlns:views="using:LiteDBExplorer.Views"
    xmlns:models="using:LiteDBExplorer.Models"
    xmlns:controls="using:LiteDBExplorer.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="LiteDB Explorer">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource SystemControlBackgroundAltHighBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="12,8">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" FontSize="20" Margin="0,0,8,0"/>
                <TextBlock Text="LiteDB Explorer" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,8">
                <Button x:Name="ThemeToggleButton" 
                        Click="ThemeToggleButton_Click"
                        ToolTipService.ToolTip="Toggle Theme">
                    <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE706;"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Grid.Column="0" 
                    Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
                    BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    BorderThickness="0,0,1,0">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Database Controls -->
                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                        <TextBlock Text="Database" 
                                   FontWeight="SemiBold" 
                                   Margin="0,0,0,8"/>
                        
                        <Button x:Name="OpenDatabaseButton"
                                Style="{StaticResource AccentButtonStyle}"
                                Margin="0,0,0,8">
                            <Button.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control" Key="O"/>
                            </Button.KeyboardAccelerators>
                            <StackPanel Orientation="Horizontal">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8B7;" Margin="0,0,8,0"/>
                                <TextBlock Text="Open Database"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="CloseDatabaseButton"
                                Style="{StaticResource DefaultButtonStyle}"
                                IsEnabled="False"
                                Margin="0,0,0,8">
                            <StackPanel Orientation="Horizontal">
                                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE8BB;" Margin="0,0,8,0"/>
                                <TextBlock Text="Close Database"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Collections Header -->
                    <Grid Grid.Row="1" Margin="16,8,16,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" 
                                   Text="Collections" 
                                   FontWeight="SemiBold"/>
                        
                        <Button Grid.Column="1"
                                x:Name="AddCollectionButton"
                                IsEnabled="False"
                                ToolTipService.ToolTip="Add Collection">
                            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE710;"/>
                        </Button>
                    </Grid>

                    <!-- Collections List -->
                    <ListView Grid.Row="2" 
                              x:Name="CollectionsListView"
                              Margin="8,0,8,8"
                              SelectionMode="Single">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:CollectionMetadata">
                                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                        BorderThickness="1"
                                        CornerRadius="6"
                                        Margin="0,2"
                                        Padding="12,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <FontIcon Grid.Column="0"
                                                  FontFamily="Segoe Fluent Icons" 
                                                  Glyph="&#xE8B7;" 
                                                  FontSize="14"
                                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                  Margin="0,0,8,0"/>
                                        
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="{x:Bind Name}" 
                                                       FontWeight="SemiBold"
                                                       FontSize="13"/>
                                            <TextBlock Text="{x:Bind FormattedDocumentCount}" 
                                                       FontSize="11"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Toolbar -->
                <CommandBar Grid.Row="0" 
                            IsOpen="False"
                            Background="Transparent"
                            DefaultLabelPosition="Collapsed">
                    
                    <AppBarButton x:Name="AddDocumentButton"
                                  Icon="Add"
                                  Label="Add Document"
                                  IsEnabled="False">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control" Key="N"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    
                    <AppBarButton x:Name="DeleteDocumentButton"
                                  Icon="Delete"
                                  Label="Delete Document"
                                  IsEnabled="False">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="Delete"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    
                    <AppBarSeparator/>
                    
                    <AppBarButton x:Name="DeleteCollectionButton"
                                  Icon="Delete"
                                  Label="Delete Collection"
                                  IsEnabled="False">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Modifiers="Control,Shift" Key="Delete"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                    
                    <AppBarSeparator/>
                    
                    <AppBarButton x:Name="RefreshButton"
                                  Icon="Refresh"
                                  Label="Refresh"
                                  IsEnabled="False">
                        <AppBarButton.KeyboardAccelerators>
                            <KeyboardAccelerator Key="F5"/>
                        </AppBarButton.KeyboardAccelerators>
                    </AppBarButton>
                </CommandBar>

                <!-- Enhanced Documents View -->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Search and View Controls -->
                    <Grid Grid.Row="0" Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search -->
                        <AutoSuggestBox Grid.Column="0"
                                        x:Name="SearchBox"
                                        PlaceholderText="Search documents..."
                                        TextChanged="SearchBox_TextChanged"
                                        Width="300"
                                        HorizontalAlignment="Left"/>

                        <!-- View Mode Toggle -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                            <TextBlock x:Name="DocumentCountText"
                                       Text="0 documents"
                                       VerticalAlignment="Center"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            

                            <ToggleButton x:Name="ViewModeToggle"
                                          Content="Tree View"
                                          IsChecked="False"
                                          Checked="ViewModeToggle_Checked"
                                          Unchecked="ViewModeToggle_Unchecked"/>
                        </StackPanel>
                    </Grid>

                    <!-- Split View for Documents -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0.6*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Document List (Enhanced) -->
                        <ScrollViewer Grid.Column="0" 
                                      VerticalScrollBarVisibility="Auto">
                            <ListView x:Name="DocumentsListView"
                                      SelectionMode="None"
                                      IsItemClickEnabled="False">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:LiteDbDocument">
                                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Margin="0,4"
                                                Padding="16">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <!-- Document Header -->
                                                <Grid Grid.Row="0" Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                                        <FontIcon FontFamily="Segoe Fluent Icons" 
                                                                  Glyph="&#xE8A5;" 
                                                                  FontSize="16"
                                                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                                                  Margin="0,0,8,0"/>
                                                        <TextBlock Text="{x:Bind Id}" 
                                                                   FontWeight="SemiBold"
                                                                   FontSize="14"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1"
                                                            Background="Transparent"
                                                            Padding="4">
                                                        <Button.Flyout>
                                                            <MenuFlyout>
                                                                <MenuFlyoutItem Text="Edit" Icon="Edit" Click="EditDocumentContext_Click"/>
                                                                <MenuFlyoutItem Text="Delete" Icon="Delete" Click="DeleteDocumentContext_Click"/>
                                                                <MenuFlyoutSeparator/>
                                                                <MenuFlyoutItem Text="Copy JSON" Icon="Copy" Click="CopyJsonContext_Click"/>
                                                                <MenuFlyoutSeparator/>
                                                                <MenuFlyoutItem Text="View Details" Icon="View" Click="ViewDocumentDetails_Click"/>
                                                            </MenuFlyout>
                                                        </Button.Flyout>
                                                        <FontIcon FontFamily="Segoe Fluent Icons" 
                                                                  Glyph="&#xE712;" 
                                                                  FontSize="12"/>
                                                    </Button>
                                                </Grid>

                                                <!-- Document Preview -->
                                                <ScrollViewer Grid.Row="1" 
                                                              MaxHeight="120"
                                                              VerticalScrollBarVisibility="Auto"
                                                              HorizontalScrollBarVisibility="Auto">
                                                    <TextBlock Text="{x:Bind JsonString}"
                                                               FontFamily="Consolas"
                                                               FontSize="11"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                               TextWrapping="Wrap"/>
                                                </ScrollViewer>

                                                <!-- Document Actions -->
                                                <StackPanel Grid.Row="2" 
                                                            Orientation="Horizontal" 
                                                            HorizontalAlignment="Right"
                                                            Margin="0,8,0,0"
                                                            Spacing="8">
                                                    <Button Content="View" 
                                                            FontSize="12"
                                                            Style="{StaticResource AccentButtonStyle}"
                                                            Padding="12,4"
                                                            Click="ViewDocumentInline_Click"/>
                                                    <Button Content="Edit" 
                                                            FontSize="12"
                                                            Padding="12,4"
                                                            Click="EditDocumentInline_Click"/>
                                                    <Button Content="Delete" 
                                                            FontSize="12"
                                                            Padding="12,4"
                                                            Click="DeleteDocumentInline_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                                <ListView.ContextFlyout>
                                    <MenuFlyout>
                                        <MenuFlyoutItem Text="View Details" Icon="View" Click="ViewDocumentDetails_Click"/>
                                        <MenuFlyoutItem Text="Edit Document" Icon="Edit" Click="EditDocumentContext_Click"/>
                                        <MenuFlyoutItem Text="Delete Document" Icon="Delete" Click="DeleteDocumentContext_Click"/>
                                        <MenuFlyoutSeparator/>
                                        <MenuFlyoutItem Text="Copy JSON" Icon="Copy" Click="CopyJsonContext_Click"/>
                                    </MenuFlyout>
                                </ListView.ContextFlyout>
                            </ListView>
                        </ScrollViewer>

                        <!-- Splitter -->
                        <Border Grid.Column="1" 
                                Width="1" 
                                Background="{ThemeResource DividerStrokeColorDefaultBrush}"
                                Margin="8,0"/>

                        <!-- Document Detail View -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Detail Header -->
                            <Border Grid.Row="0" 
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Margin="0,0,0,8"
                                    Padding="16,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock x:Name="SelectedDocumentId" 
                                                   Text="Select a document"
                                                   FontWeight="SemiBold"
                                                   FontSize="14"/>
                                        <TextBlock Text="Document Details"
                                                   FontSize="12"
                                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </StackPanel>

                                    <ToggleButton Grid.Column="1"
                                                  x:Name="DetailViewToggle"
                                                  Content="Tree"
                                                  IsChecked="True"
                                                  Checked="DetailViewToggle_Checked"
                                                  Unchecked="DetailViewToggle_Unchecked"/>
                                </Grid>
                            </Border>

                            <!-- Detail Content -->
                            <Border Grid.Row="1"
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="16">
                                <Grid>
                                    <!-- Tree View Mode -->
                                    <ScrollViewer x:Name="TreeViewContainer"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  Visibility="Visible">
                                        <controls:JsonViewerControl x:Name="JsonTreeViewer"/>
                                    </ScrollViewer>

                                    <!-- Raw JSON Mode -->
                                    <ScrollViewer x:Name="RawJsonContainer"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Auto"
                                                  Visibility="Collapsed">
                                        <TextBlock x:Name="RawJsonDisplay"
                                                   FontFamily="Consolas"
                                                   FontSize="12"
                                                   IsTextSelectionEnabled="True"
                                                   TextWrapping="Wrap"/>
                                    </ScrollViewer>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Grid Grid.Row="2" 
              Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"
              BorderBrush="{ThemeResource SystemControlForegroundBaseMediumBrush}"
              BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" Margin="16,8">
                <ProgressRing x:Name="StatusProgressRing" 
                              Width="16" Height="16" 
                              IsActive="False"
                              Visibility="Collapsed"
                              Margin="0,0,8,0"/>
                <TextBlock x:Name="StatusText" 
                           Text="Ready"
                           VerticalAlignment="Center"/>
                <TextBlock x:Name="DatabasePathText" 
                           Margin="16,0,0,0"
                           Opacity="0.7"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
