<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="LiteDBExplorer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LiteDBExplorer"
    xmlns:helpers="using:LiteDBExplorer.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" />
                <ResourceDictionary Source="Themes/AppTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value Converters -->
            <helpers:BoolNegationConverter x:Key="BoolNegationConverter"/>
            <helpers:ObjectToBooleanConverter x:Key="ObjectToBoolean"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
