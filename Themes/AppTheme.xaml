<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Color Resources -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005A9E"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="#FFB900"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D83B01"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundAltBrush" Color="#F3F2F1"/>
    <SolidColorBrush x:Key="BackgroundChromeBrush" Color="#F3F2F1"/>
    
    <!-- Foreground Brushes -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#323130"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#605E5C"/>
    <SolidColorBrush x:Key="ForegroundTertiaryBrush" Color="#8A8886"/>

    <!-- Border Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="#C8C6C4"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#E1DFDD"/>

    <!-- Button Styles -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- ListView Styles -->
    <Style x:Key="ModernListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>

    <!-- TextBlock Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>

    <Style x:Key="SubheaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
    </Style>

    <!-- Border Styles -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource CardBackgroundFillColorDefaultBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource CardStrokeColorDefaultBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- CommandBar Styles -->
    <Style x:Key="ModernCommandBarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="DefaultLabelPosition" Value="Collapsed"/>
        <Setter Property="IsOpen" Value="False"/>
    </Style>

</ResourceDictionary>