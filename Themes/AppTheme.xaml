<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Professional Dark Theme Colors -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="#106EBE"/>
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#005A9E"/>
    
    <SolidColorBrush x:Key="AccentBrush" Color="#FFB900"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
    <SolidColorBrush x:Key="WarningBrush" Color="#D83B01"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>

    <!-- Professional Dark Theme Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0F1419"/>
    <SolidColorBrush x:Key="BackgroundAltBrush" Color="#1A1F2E"/>
    <SolidColorBrush x:Key="BackgroundChromeBrush" Color="#252A3A"/>
    <SolidColorBrush x:Key="BackgroundCardBrush" Color="#1E2332"/>
    <SolidColorBrush x:Key="BackgroundSidebarBrush" Color="#1A1F2E"/>
    <SolidColorBrush x:Key="BackgroundToolbarBrush" Color="#2D3446"/>
    <SolidColorBrush x:Key="BackgroundHeaderBrush" Color="#252A3A"/>
    <SolidColorBrush x:Key="BackgroundElevatedBrush" Color="#2D3446"/>
    
    <!-- Professional Dark Theme Foreground Brushes -->
    <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundSecondaryBrush" Color="#E1E5E9"/>
    <SolidColorBrush x:Key="ForegroundTertiaryBrush" Color="#B4B9C1"/>

    <!-- Professional Dark Theme Border Brushes -->
    <SolidColorBrush x:Key="BorderBrush" Color="#3A4151"/>
    <SolidColorBrush x:Key="BorderLightBrush" Color="#4A5263"/>
    <SolidColorBrush x:Key="DividerBrush" Color="#3A4151"/>
    <SolidColorBrush x:Key="BorderAccentBrush" Color="#4A90E2"/>

    <!-- Professional Button Styles -->
    <Style x:Key="IconButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="MinWidth" Value="32"/>
        <Setter Property="MinHeight" Value="32"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Margin="{TemplateBinding Padding}"/>
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal"/>
                                <VisualState x:Name="PointerOver">
                                    <VisualState.Setters>
                                        <Setter Target="Background" Value="#3A4151"/>
                                    </VisualState.Setters>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <VisualState.Setters>
                                        <Setter Target="Background" Value="#4A5263"/>
                                    </VisualState.Setters>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Professional Accent Button Style -->
    <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="{ThemeResource PrimaryBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="{ThemeResource PrimaryBrush}"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Professional Secondary Button Style -->
    <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
        <Setter Property="Background" Value="{ThemeResource BackgroundElevatedBrush}"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Modern ListView Styles -->
    <Style x:Key="ModernListViewStyle" TargetType="ListView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>

    <!-- Professional Text Styles -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>

    <Style x:Key="SubheaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}"/>
    </Style>

    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
    </Style>

    <Style x:Key="CaptionTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}"/>
    </Style>

    <!-- Professional Card Border Style -->
    <Style x:Key="CardBorderStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <!-- Professional Elevated Card Style -->
    <Style x:Key="ElevatedCardStyle" TargetType="Border">
        <Setter Property="Background" Value="{ThemeResource BackgroundElevatedBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderAccentBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Modern CommandBar Style -->
    <Style x:Key="ModernCommandBarStyle" TargetType="CommandBar">
        <Setter Property="Background" Value="{ThemeResource BackgroundToolbarBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="DefaultLabelPosition" Value="Collapsed"/>
        <Setter Property="IsOpen" Value="False"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <!-- Professional AutoSuggestBox Style -->
    <Style x:Key="ModernAutoSuggestBoxStyle" TargetType="AutoSuggestBox">
        <Setter Property="Background" Value="{ThemeResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="PlaceholderText" Value="Search..."/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Professional ToggleButton Style -->
    <Style x:Key="ModernToggleButtonStyle" TargetType="ToggleButton">
        <Setter Property="Background" Value="{ThemeResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Professional ScrollViewer Style -->
    <Style x:Key="ModernScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

    <!-- Professional ComboBox Style -->
    <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{ThemeResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontSize" Value="13"/>
    </Style>

    <!-- Professional TextBox Style -->
    <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{ThemeResource BackgroundCardBrush}"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <!-- Professional Progress Ring Style -->
    <Style x:Key="ModernProgressRingStyle" TargetType="ProgressRing">
        <Setter Property="Foreground" Value="{ThemeResource PrimaryBrush}"/>
    </Style>

    <!-- Modern TabView Style -->
    <Style x:Key="ModernTabViewStyle" TargetType="TabView">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{ThemeResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="0"/>
    </Style>

</ResourceDictionary>